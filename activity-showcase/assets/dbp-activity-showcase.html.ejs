<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="white"/>

    <!-- Favicons -->
    <link rel="shortcut icon" type="image/x-icon" href="<%= getPrivateUrl('favicon.ico') %>">
    <link rel="icon" type="image/svg+xml" href="<%= getPrivateUrl('favicon.svg') %>" sizes="any">

    <!-- PWA manfiest file -->
    <link rel="manifest" href="<%= getUrl(name + '.manifest.json') %>">
    
    <!-- PWA iphone -->
    <link rel="apple-touch-icon" sizes="180x180" href="<%= getPrivateUrl('apple-touch-icon.png') %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= getPrivateUrl('icon-32x32.png') %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= getPrivateUrl('icon-16x16.png') %>">
    <link rel="mask-icon" href="<%= getPrivateUrl('safari-pinned-tab.svg') %>" color="#e4154b">
    <meta name="apple-mobile-web-app-status-bar-style" content="white">

    <!-- Loading spinner -->
    <script type="module">
        import {Spinner} from '<%= getPrivateUrl('spinner.js') %>';
        customElements.define('dbp-loading-spinner', Spinner);
    </script>

    <!-- App bundles-->
    <script type="module" src="<%= getUrl(name + '.js') %>"></script>

    <!-- Prevent Chrome/Edge from suggesting to translate the page -->
    <meta name="google" content="notranslate">

    <!-- Font related CSS -->
    <style>
        @import "<%= getPrivateUrl('fonts/source-sans-pro/300.css') %>";
        @import "<%= getPrivateUrl('fonts/source-sans-pro/400.css') %>";
        @import "<%= getPrivateUrl('fonts/source-sans-pro/600.css') %>";

        body {
            font-family: 'Source Sans Pro', 'Calibri', 'Arial', 'sans-serif';
            font-weight: 300;
            margin: 0;
        }

        /* TU-Graz style override */
        .light-theme{
            --dbp-override-base: white;
            --dbp-override-base-inverted: black;
            --dbp-override-text: black;
            --dbp-override-text-inverted: white;
            --dbp-override-text-muted: #5c5856;
            --dbp-override-accent: #e4154b;
            --dbp-override-primary-base: #245b78;
            --dbp-override-primary-text: white;
            --dbp-override-primary-border: 1px solid #245b78;
            --dbp-override-secondary-base: white;
            --dbp-override-secondary-text: black;
            --dbp-override-info: #245b78;
            --dbp-override-success: #138800;
            --dbp-override-warning-as-text: #af6405;
            --dbp-override-warning: #ffad4d;
            --dbp-override-danger: #e4154b;
            --dbp-override-border: 1px solid black;
            --dbp-override-hover-base: black;
            --dbp-override-hover-text: white;
        }

        .dark-theme{
            --dbp-override-base: black;
            --dbp-override-base-inverted: white;
            --dbp-override-text: white;
            --dbp-override-text-inverted: black;
            --dbp-override-text-muted: #afaca7;
            --dbp-override-accent: #e4154b;
            --dbp-override-primary-base: #73899e;
            --dbp-override-primary-text: black;
            --dbp-override-secondary-base: black;
            --dbp-override-secondary-text: white;
            --dbp-override-info: #73899e;
            --dbp-override-success: #138800;
            --dbp-override-warning-as-text: #ffad4d;
            --dbp-override-warning: #ffad4d;
            --dbp-override-danger: #e4154b;
            --dbp-override-border: 1px solid white;
            --dbp-override-hover-base: white;
            --dbp-override-hover-text: black;
        }

        .sweets-theme{
            --dbp-override-base: #f0f2ce;
            --dbp-override-base-inverted: #171717;
            --dbp-override-text: #ce00ff;
            --dbp-override-text-inverted: #f0f2ce;
            --dbp-override-text-muted: #8a8a8a;
            --dbp-override-accent: #e087ae;
            --dbp-override-primary-base: #1ecae8;
            --dbp-override-primary-text: white;
            --dbp-override-secondary-base: #e087ae;
            --dbp-override-secondary-text: white;
            --dbp-override-secondary-border: 3px solid #7cdc7c;
            --dbp-override-info: lightblue;
            --dbp-override-success: #7cdc7c;
            --dbp-override-warning-as-text: orange;
            --dbp-override-warning: orange;
            --dbp-override-danger: #e087ae;
            --dbp-override-border: 3px dotted #acc1ff;
            --dbp-override-hover-base: #b0e67c;
            --dbp-override-hover-text: black;
        }

        .bootstrap-theme{
            --dbp-override-base: white;
            --dbp-override-base-inverted: #343a40;
            --dbp-override-text: #343a40;
            --dbp-override-text-inverted: #f8f9fa;
            --dbp-override-text-muted: #6c757d;
            --dbp-override-accent: #007bff;
            --dbp-override-primary-base: #007bff;
            --dbp-override-primary-text: white;
            --dbp-override-secondary-base: #6c757d;
            --dbp-override-secondary-text: white;
            --dbp-override-info: #17a2b8;
            --dbp-override-success: #28a745;
            --dbp-override-warning-as-text: #ffc107;
            --dbp-override-warning: #ffc107;
            --dbp-override-danger: #dc3545;
            --dbp-override-border: 1px solid #dee2e6;
        }

        .phst-theme{
            --dbp-override-base: white;
            --dbp-override-base-inverted: rgb(76, 76, 76);
            --dbp-override-text: rgb(76, 76, 76);
            --dbp-override-text-inverted: white;
            --dbp-override-text-muted: #9a9a9a;
            --dbp-override-accent: #f9b000;
            --dbp-override-primary-base: #f9b000;
            --dbp-override-primary-text: white;
            --dbp-override-primary-border: 1px solid rgb(236, 236, 237);
            --dbp-override-secondary-base: rgb(236, 236, 237);
            --dbp-override-secondary-text: rgb(51, 51, 51);
            --dbp-override-secondary-border: 1px solid rgb(236, 236, 237);
            --dbp-override-info: #7fa5ca;
            --dbp-override-success: rgb(49, 162, 76);
            --dbp-override-warning-as-text: #f9b000;
            --dbp-override-warning: #f9b000;
            --dbp-override-danger: #F35369;
            --dbp-override-border: 1px solid rgb(236, 236, 237);
            --dbp-override-hover-text: #f9b000;
        }

    </style>

    <!-- Preloading/Preconnecting -->
    <link rel="preconnect" href="<%= entryPointURL %>">
    <link rel="preconnect" href="<%= keyCloakBaseURL %>">
    <script type="module" src="<%= keyCloakBaseURL %>/js/keycloak.min.js"></script>
</head>

<body>
<<%= name %>
    provider-root
    lang="de"
    entry-point-url="<%= entryPointURL %>"
    nextcloud-web-app-password-url="<%= nextcloudWebAppPasswordURL %>"
    nextcloud-webdav-url="<%= nextcloudWebDavURL %>"
    nextcloud-name="<%= nextcloudName %>"
    nextcloud-file-url="<%= nextcloudFileURL %>"
    src="<%= getUrl(name + '.topic.metadata.json') %>"
    lang="en"
    base-path="<%= getUrl('') %>"
    keycloak-config='{"url": "<%= keyCloakBaseURL %>", "realm": "<%= keyCloakRealm %>", "clientId": "<%= keyCloakClientId %>", "silentCheckSsoRedirectUri": "<%= getUrl('silent-check-sso.html') %>"}'
    matomo-url="<%= matomoUrl %>" matomo-site-id="<%= matomoSiteId %>"
    git-info='<%= buildInfo.info %>'
    build-url='<%= buildInfo.url %>'
    build-time='<%= buildInfo.time %>'
    env='<%= buildInfo.env %>'
    themes='[{"class": "light-theme", "icon": "sun", "name": "Light Mode"},
            {"class": "dark-theme", "icon": "night", "name": "Dark Mode"},
            {"class": "sweets-theme", "icon": "candy", "name": "Candy Mode"},
            {"class": "bootstrap-theme", "icon": "bootstrap", "name": "Bootstrap Mode"},
            {"class": "phst-theme", "icon": "star-filled", "name": "PHST Mode"}]'
><dbp-loading-spinner></dbp-loading-spinner></<%= name %>>

<!-- Error handling for too old browsers -->
<script src="<%= getPrivateUrl('browser-check.js') %>" defer></script>
<noscript>Diese Applikation ben√∂tigt Javascript / This application requires Javascript</noscript>
</body>
</html>
